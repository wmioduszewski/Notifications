<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.mobica.womi.pushnots.MainActivity">

    <!--<include layout="@layout/content_main" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#aaffaa">

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sample notification title" />
        <CheckBox
            android:id="@+id/cbIsLongText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Long content"/>

        <CheckBox
            android:id="@+id/cbAutoCancelling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Autocancelling"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large image"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbLargeImagePanda"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:text="panda" />

            <RadioButton
                android:id="@+id/rbLargeImageMonkey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="monkey" />

            <RadioButton
                android:id="@+id/rbLargeImageNone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="none" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small image"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbSmallImageStar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:text="star" />

            <RadioButton
                android:id="@+id/rbSmallImagePanda"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="panda" />

            <RadioButton
                android:id="@+id/rbSmallImageMonkey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="monkey" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background= "#aaaaff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start "/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rbNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Now"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/rbLater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Later"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/tvDate"
                android:textSize="20dp"
                android:text="date"
                android:textIsSelectable="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTime"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="20dp"
                android:text="time" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat every "/>

            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText"
                android:text="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" minutes"/>


        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="submit" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel" />

    <TextView
        android:id="@+id/tvBuildDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
